<h1>Listing holds</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Timestamp</th>
      <th>Redeem date</th>
      <th>Is redeemed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holds.each do |hold| %>
      <tr>
        <td><%= hold.id %></td>
        <td><%= hold.timestamp %></td>
        <td><%= hold.redeem_date %></td>
        <td><%= hold.is_redeemed %></td>
        <td><%= link_to 'Show', hold %></td>
        <td><%= link_to 'Edit', edit_hold_path(hold) %></td>
        <td><%= link_to 'Destroy', hold, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

